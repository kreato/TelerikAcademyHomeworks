body, form, fieldset, input, label, img
	margin 0
	padding 0
	border 0
	font-family 0
	font-size 16px
body
	background-color #DDD
	padding 5px
	form
		width 940px
		margin auto
		fieldset
			border 1px solid black
			border-radius 10px
			text-align center
			position relative
			label
				width 150px
				height 150px
			legend
				font-size 1.2em
			img:first-of-type
				width 150px
				height 150px
			img:last-of-type
				position absolute
				top 190px
				height 517px
				width 400px
				border 1px solid black
				display none
			input[type="radio"]
				display none
				&:checked + label img:last-of-type
					display block